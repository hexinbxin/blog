    <display-name>ArticleShow</display-name>
    <servlet-name>ArticleShow</servlet-name>
    <servlet-class>ssh.ArticleShow</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>ArticleShow</servlet-name>
    <url-pattern>/ArticleShow</url-pattern>
  </servlet-mapping>
</web-app>